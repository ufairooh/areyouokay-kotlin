<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.areyouokay">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AreYouOkay">
        <activity android:name=".Activity.IsiArtikelActivity"></activity>
        <activity android:name=".Activity.ArtikelActivity" />
        <activity android:name=".Activity.EditProfilActivity" />
        <activity android:name=".Activity.ProfilActivity" />
        <activity android:name=".Activity.PenangananActivity" />
        <activity android:name=".Activity.HasilDeteksiActivity" />
        <activity android:name=".Activity.IntroDeteksiActivity" />
        <activity android:name=".Activity.DeteksiActivity" />
        <activity
            android:name=".Activity.HomeActivity"
            android:noHistory="true" />
        <activity android:name=".Activity.FormRegisterActivity" />
        <activity
            android:name=".LoginActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>